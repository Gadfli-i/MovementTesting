using System.Collections;
using UnityEngine;
using UnityEngine.InputSystem;
using UnityEngine.InputSystem.Processors;

public class PlayerController : MonoBehaviour
{
    // variables below used for component references
    private Rigidbody rb;
    private PlayerInput playerInput;
    private InputAction JumpAction;
    private Vector3 popForceDirection = Vector3.up;             // direction of the pop force
    // variables below used for movement input
    private float movementX;                                    // used to store x value
    private float movementY;                                    // used to store y value
    // variables below used for player state tracking
    private bool isGrounded;                                    // track if player is grounded
    private bool isMoving;                                      // track if player is moving
    // Variables below used for movement control
    private float currentSpeed;                                 // current speed of the rigidbody
    private float JumpForce;                                    // ACTUAL force applied when jumping
    [SerializeField] private float baseJumpForce = 8.0f;        // base multiplier - force applied when jumping
    [SerializeField] private float popForceStrength = 15f;      // strength of the pop force
    [SerializeField] private float speed = 12.0f;               // base force applied to the rigidbody
    [SerializeField] private float maxSpeed = 15.0f;            // maximum speed limit for the rigidbody

    void Start()
    {
        // get component references
        rb = GetComponent<Rigidbody>();
        playerInput = GetComponent<PlayerInput>();
        // get action references
        JumpAction = playerInput.actions["Jump"];
    }

    void Update()
    {
        // check for jump input and if player is grounded allow jumping
        if (JumpAction.triggered && isGrounded)
        {
            // apply jump force to rigidbody
            rb.AddForce(Vector3.up * JumpForce, ForceMode.Impulse);
        }
    }
    private void OnMove(InputValue movementValue)
    {
        // get movement vector from input system
        Vector2 movementVector = movementValue.Get<Vector2>();
        movementX = movementVector.x; // store x value
        movementY = movementVector.y; // store y value
    }

    private void FixedUpdate()
    {
        // calculate current speed based on rigidbody velocity and round it
        currentSpeed = Mathf.Round(rb.linearVelocity.magnitude);
        // if player is moving increase jump force
        if (currentSpeed > 0.1f)
        {
            JumpForce = baseJumpForce * 1.5f;
            Debug.Log("Player is moving at speed: " + currentSpeed);
        }
        else
        {
            JumpForce = baseJumpForce;
            Debug.Log("Player is NOT moving.");
        }
        // create movement vector based on input
        Vector3 movement = new Vector3(movementX, 0.0f, movementY);
        // apply force based on input * (speed * delta time)
        rb.AddForce(movement * (speed * Time.deltaTime) * 50);
        // enforce maximum speed limit
        if (currentSpeed > maxSpeed)
        {
            rb.linearVelocity = Vector3.Lerp(rb.linearVelocity, rb.linearVelocity.normalized * speed / 1.2f, 0.5f);
            Debug.Log("Max Speed Exceeded: " + currentSpeed + "Normalizing.");
        }
    }
    private void OnCollisionEnter(Collision collision)
    {
        // check if collided object is the player to apply speed pop function
        if (collision.gameObject.CompareTag("Player"))
        {
            Rigidbody targetRb = collision.rigidbody;
            if (targetRb)
            {
                SpeedPop(targetRb);
            }
        }

        if (collision.gameObject.CompareTag("BouncePlayer"))
        {
            PopForce();
        }
    }

    private void OnCollisionStay(Collision collision)
    {
        isGrounded = true;
    }

    private void OnCollisionExit(Collision collision)
    {
        isGrounded = false;
    }

    private void SpeedPop(Rigidbody target)
    {
        target.AddForce(popForceDirection * (currentSpeed * 1.25f), ForceMode.Impulse);
    }

    private void PopForce()
    {
        rb.AddForce(Vector3.up * (Mathf.Round(baseJumpForce * currentSpeed) / 2), ForceMode.Impulse);
        Debug.Log("Player WWWwwwooooOOPP.");
    }
}
